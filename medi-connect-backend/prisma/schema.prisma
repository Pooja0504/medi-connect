generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  actorRole  String
  action     String
  resourceId String?
  createdAt  DateTime @default(now())
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  name            String
  role            String
  specialization  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}

model Note {
  id           String   @id @default(cuid())
  doctorId     String
  patientId    String
  appointmentId String
  content      String
  createdAt    DateTime @default(now())
}

model Appointment {
  id         String   @id @default(cuid())
  patientId  String
  doctorId   String
  date       DateTime
  createdAt  DateTime @default(now())
}